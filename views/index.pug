extends layout

block content
	div(ng-controller="indexController", ng-init="init()")
		.ui.one.column.stackable.center.aligned.page.grid.margin-30
				.column.twelve.wide
					.ui.stacked.segment.gameArea
						.circle.blue(style='left:150px; top:100px;')
							.relative
								span.name Hulusi
								.message Merhaba
						.circle.green(style='left:300px; top:100px;')
							.relative
								span.name Aslıhan
								.message selam nasılsın :)
						.circle.red(style='left:350px; top:300px;')
							.relative
								span.name Joe
								.message this is awesome
					.ui.items.chat
						.item
							.content
								a.header.name Hulusi
								.description.message Selam
						.item
							.content
								a.header.name Aslıhan
								.description.message selam nasılsın :)
						.item
							.content
								a.header.name Joe
								.description.message this is awesome
						.item
							.content
								a.header.name Sinang
								.description.message hey
					.ui.action.input.fluid
						input(placeholder='Type here...', type='text')
						button.ui.button Send

